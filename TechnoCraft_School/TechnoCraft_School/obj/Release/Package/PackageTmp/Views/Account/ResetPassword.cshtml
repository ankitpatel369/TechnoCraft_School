@model MatrukrupatravelsAdmin.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_BlankPage.cshtml";
}

<link href="~/Content/Loginstyle.css" rel="stylesheet" />

<div class="wrapper">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
    {
        @Html.AntiForgeryToken()
    <center>
        <img src="~/Content/AdminLTE/img/logo.png" align="center" style="margin-top:5px;" />
        @*<h5 class="form-signin-heading" style="font-family:Tahoma;font-weight:600;color:rgb(0, 87, 125)">ATMIYA GROUP OF INSTITUTIONS </h5>*@
    </center>
        <hr />

        <h4 class="form-signin-heading"> Reset your password</h4>

        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)

        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", required = "required" })
        <br />
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "New Password", required = "required" })
        <br />
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm New Password", required = "required" })

        <hr />
        <button type="submit" class="btn btn-lg btn-primary btn-block">Reset Password</button>
        <br />
    }

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
