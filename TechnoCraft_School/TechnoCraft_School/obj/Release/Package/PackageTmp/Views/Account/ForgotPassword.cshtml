@model MatrukrupatravelsAdmin.Models.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_BlankPage.cshtml";
    ViewBag.Title = "Forgot your password?";
}

<link href="~/Content/Loginstyle.css" rel="stylesheet" />

<div class="wrapper">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-signin", @Role = "form" }))
{
        @Html.AntiForgeryToken()
    <center>
        <img src="~/Content/AdminLTE/img/logo.png" align="center" style="margin-top:5px;" />
        @*<h5 class="form-signin-heading" style="font-family:Tahoma;font-weight:600;color:rgb(0, 87, 125)">ATMIYA GROUP OF INSTITUTIONS </h5>*@
    </center>
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        <hr />

        <h4 class="form-signin-heading">Password Recovery</h4>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @required = "required", @type = "email", @autofocus = "" })
        <br />
        <button type="submit" class="btn btn-lg btn-primary btn-block">Continue</button>

        <hr />

        @Html.ActionLink("Return to login page", "Login")
}
</div>

