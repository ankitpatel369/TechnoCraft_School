@model TechnoCraftSchool_Model.Subject

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    @section Header{
        <h1>Subject Management</h1>
        <small></small>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Subject")"><i class=" fa fa-dashboard"></i> Home </a></li>
            <li class="active">Subjects</li>
        </ol>
    }
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit Subject</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("Edit", "Subject"))
                {
                    @Html.AntiForgeryToken()

                    <div class="box-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Subject_ID)
                        <div class="form-group">
                            @Html.LabelFor(model => model.SubjectName)
                            @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
