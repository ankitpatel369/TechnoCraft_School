@model IEnumerable<TechnoCraftSchool_Model.Course>

@{
    ViewBag.Title = "Index";
}


@section Header{
    <section class="content-header">
        <h1>Course Management</h1>
    </section>
}

<div class="row">
    <!-- Left col -->
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa  fa-tasks"></i> &nbsp;&nbsp; Courses </h3>
                <div class="box-tools pull-right">
                    <a href="@Url.Action("Create","Course")" class="btn btn-primary"><i class="fa fa-plus"></i> Create new courses </a>
                    <div></div>
                </div>
            </div>
            <!-- /.box-header -->
            <div style="display: block;" class="box-body">
                <div>
                    <table class="table table-bordered table-striped dataTable" id="Buses">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CourseName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CourseAlias)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CourseCode)
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="background:@(item.IsActive ? "#FFF" : "#EEE")">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseAlias)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseCode)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Course_ID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Course_ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Course_ID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
</div>
