@model IEnumerable<TechnoCraftSchool_Model.AcademicYear>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <!-- Left col -->
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border"> 
                <h3 class="box-title"><i class="fa  fa-tasks"></i> &nbsp;&nbsp; Academic Year </h3>
                <div class="box-tools pull-right">
                    <a href="@Url.Action("Create","AcademicYear")" class="btn btn-primary"><i class="fa fa-plus"></i> Create Academic Year </a>
                    <div></div>
                </div>
            </div>
            <!-- /.box-header -->
            <div style="display: block;" class="box-body">
                <div>
                    <table class="table table-bordered table-striped dataTable" id="Buses">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.AcademicPeriodName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AcademicPeriodAlias)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StartingDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EndingDate)
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="background:@(item.IsActive ? "#FFF" : "#EEE")">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AcademicPeriodName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AcademicPeriodAlias)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartingDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndingDate)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.AcademicYear_Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.AcademicYear_Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.AcademicYear_Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
</div>
