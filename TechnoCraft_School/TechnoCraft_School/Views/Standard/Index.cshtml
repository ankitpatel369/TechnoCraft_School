@model IEnumerable<TechnoCraftSchool_Model.Standard>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <!-- Left col -->
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa  fa-tasks"></i> &nbsp;&nbsp; Standard </h3>
                <div class="box-tools pull-right">
                    <a href="@Url.Action("Create","Standard")" class="btn btn-primary"><i class="fa fa-plus"></i> Create new Standard </a>
                    <div></div>
                </div>
            </div>
            <!-- /.box-header -->
            <div style="display: block;" class="box-body">
                <div>
                    <table class="table table-bordered table-striped dataTable" id="Buses">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Course.CourseName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StandardName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StandardAlias)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="background:@(item.IsActive ? "#FFF" : "#EEE")">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Course.CourseName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StandardName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StandardAlias)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Standard_ID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Standard_ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Standard_ID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
</div>