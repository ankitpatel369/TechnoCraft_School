@model IEnumerable<TechnoCraftSchool_Model.Division>


@{
    ViewBag.Title = "Index";
}

@section Header{
    <section class="content-header">
        <h1>Division Management</h1>
    </section>
}

<div class="row">
    <!-- Left col -->
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa  fa-tasks"></i> &nbsp;&nbsp; Divisions </h3>
                <div class="box-tools pull-right">
                    <a href="@Url.Action("Create","Division")" class="btn btn-primary"><i class="fa fa-plus"></i> Create new Division </a>
                    <div>

                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div style="display: block;" class="box-body">
                <div>
                    <table class="table table-bordered table-striped dataTable" id="Buses">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Classs.ClassName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DivisionName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DivisionAlias)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="background:@(item.IsActive ? "#FFF" : "#EEE")">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Classs.ClassName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DivisionName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DivisionAlias)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsActive)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Division_ID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Division_ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Division_ID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
</div>
