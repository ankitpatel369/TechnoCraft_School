@{
    ViewBag.Title = "Forgot password confirmation";
    Layout = "~/Views/Shared/_BlankPage.cshtml";
}
<link href="~/Content/AdminLTE/AdminLTE.min.css" rel="stylesheet" />
<link href="~/Content/Loginstyle.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

<div class="wrapper" style="margin-top:10px;">
    <div style="padding:20px">

        <hgroup class="title">
            <h2>@ViewBag.Title.</h2>
        </hgroup>

        <div class="callout callout-success ">
            <h4>
                <i class="icon fa fa-check"></i> Password recovery link has been sent to your email.
            </h4>
            Please check your email to reset your password.
            @Html.ActionLink("Click here", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" }) to log in
        </div>

    </div>
</div>
