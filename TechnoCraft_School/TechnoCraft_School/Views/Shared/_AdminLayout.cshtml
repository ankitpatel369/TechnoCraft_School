        if (getCookie("menu-style") != "sidebar-collapse") {
            document.body.setAttribute('class', document.body.getAttribute('class') + " sidebar-collapse");
        }
    </script>
    <div class="wrapper">
        @Html.Partial("_AdminTopMenu")
