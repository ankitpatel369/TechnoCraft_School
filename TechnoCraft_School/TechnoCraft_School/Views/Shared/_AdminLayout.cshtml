    <!-- datepicker -->
    <script src="~/Scripts/AdminLTE/plugins/datepicker/bootstrap-datepicker.js" type="text/javascript"></script>
    <!-- iCheck -->
    <script src="~/Scripts/AdminLTE/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
    <!-- SlimScroll 1.3.0 -->
    <script src="~/Scripts/AdminLTE/plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            //Initialize Select2 Elements
            $(".select2").select2();
            $(".hide-search").select2({ minimumResultsForSearch: Infinity });
        });
        //iCheck for checkbox and radio inputs
        $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
            checkboxClass: 'icheckbox_minimal-blue',
            radioClass: 'iradio_minimal-blue'
        });
        //Red color scheme for iCheck
        $('input[type="checkbox"].minimal-red, input[type="radio"].minimal-red').iCheck({
            checkboxClass: 'icheckbox_minimal-red',
            radioClass: 'iradio_minimal-red'
        });
        //Flat red color scheme for iCheck
        $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
            checkboxClass: 'icheckbox_flat-green',
            radioClass: 'iradio_flat-green'
        });

        $('.datepicker').datepicker({
            autoclose: true,
            todayHighlight: true,
            format: 'dd-mm-yyyy',
            autoclose: true,
        });
        $('.year').datepicker({
            autoclose: true,
            
        });

        function LoadingMsg(title, msg, hidebtn) {
            $("#Loading .modal-content .modal-header .modal-title").html(title);
            if (typeof hidebtn != "undefined") {
                $("#Loading .modal-content .modal-body").html(msg);
            }
            else {
                $("#Loading .modal-content .modal-body").html("<h4 class='alert alert-warning'>" + msg + "</h4>");
                $("#Loading .modal-content .modal-footer").html('<button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>');
            }
        }

        function Loading(status) {
            $("#Loading").modal(status);
        }

        $('#Loading').on('hidden.bs.modal', function () {
            LoadingMsg("Please Wait...", '<div class="progress"><div class="progress-bar progress-bar-striped active" role="progressbar" style="width:100%"></div></div>', true);
        });
        function menustyle() {
            setCookie("menu-style", document.body.getAttribute('class').split(' ')[document.body.getAttribute('class').split(' ').length - 1], 365);
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
