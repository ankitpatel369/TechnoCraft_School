
@{
    ViewBag.Title = "User Information";
}

<script src="~/Scripts/jquery-2.1.3.js"></script>
<script src="~/Scripts/jquery-2.1.3.min.js"></script>


@using (Html.BeginForm("GetUserInfo", "RolesManager"))
{
    @Html.AntiForgeryToken()

       
    <div class="row">

        <div class="col-md-7">

            <div class="box box-gray ">
                <div class="box-header with-border bg-light-blue-gradient">
                    <h3 class="box-title ">User Information</h3>
                </div>
                <div class="box-body">
                    <br />
                    @Html.DropDownList("UserName", null, new { @class = "select2" })
                    <input type="submit" name="buttonGroup" value="Get User Information" class="btn btn-primary" />
                </div>
                <div class="box-footer">
                </div>
            </div>
        </div>

        @if (@ViewBag.Name != null)
        {

        <div class="col-md-5">

            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">

                    <h3 class="profile-username text-center ">@ViewBag.Name </h3>

                    <h4><p class=" text-center text-bold"> @ViewBag.PostName </p></h4>

                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item " style="background-color:ivory">
                            <b>Contact Id</b> <a class="pull-right"><span class="label label-grey">@ViewBag.ContactId</span></a>
                        </li>

                        <li class="list-group-item" style="background-color:ivory">
                            <b>Superior</b> <a class="pull-right"><span class="label label-grey">@ViewBag.ContactNameParent</span></a>
                        </li>


                        <li class="list-group-item" style="background-color:ivory">
                            <b>Email</b> <a class="pull-right"><span class="label label-grey">@ViewBag.Email</span></a>
                        </li>




                        @if (@ViewBag.EmailConfirmed != null)
                        {
                            <li class="list-group-item" style="background-color:ivory">
                                <b>Email Confirmed</b> <a class="pull-right">
                                    @if (@ViewBag.EmailConfirmed)
                                    {
                                        <span class="label label-success">@ViewBag.EmailConfirmed</span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger">@ViewBag.EmailConfirmed</span>
                                    }
                                </a>
                            </li>
                        }


                        <li class="list-group-item " style="background-color:ivory">
                            <b>Joining Date</b> <a class="pull-right"><span class="label label-info">@ViewBag.Joining_Date</span></a>
                        </li>

                        <li class="list-group-item " style="background-color:ivory">
                            <b>Task Group</b> <a class="pull-right"><span class="label label-grey">@ViewBag.Task_Group_ID</span></a>
                        </li>

                        <li class="list-group-item " style="background-color:ivory">
                            <b>Id</b> <a class="pull-right"><span class="label label-grey">@ViewBag.Id</span></a>
                        </li>

                    </ul>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>


        }

        

    </div>
    
   





}



















            <script type="text/javascript">
                $(function () {
                    //Initialize Select2 Elements
                    $(".select2").select2();
                    $(".hide-search").select2({ minimumResultsForSearch: Infinity });
                });
            </script>
